{% extends "layouts/admin.html.twig" %}

{% block admin_content %}




<div class="container ">


	<div class="align-content-end mb-2">
		<a href="{{ path('define_dates') }}">
			<button class="btn btn-sm btn-primary " type="button">
				<i class="fas fa-list"></i>
				Liste des créneaux</button>
		</a>
	</div>

	<div class="card mt-3">
		<div class="card-header">
			<h5 class="text-center">Edition du créneau n° {{ dateTime.idDSout }} d'accès au site</h5>

		</div>
		<div class="card-body">
            {% include 'layouts/flash-messages.html.twig' %}
			{{ form_start(formDateAccess) }}


			<div class="row">
				<div class="col-md-6">
					<h4>Date de début</h4>
					{# <input class="form-control" type="date" name="" id="">  #}
					{# <input class="form-control mt-2" type="time" name="" id=""> #}
					{{ form_row(formDateAccess.dateDebut) }}
				</div>
				<div class="col-md-6">
					<h4>Date de fin</h4>
					{# <input class="form-control" type="date" name="" id="">  #}
					{# <input class="form-control mt-2" type="time" name="" id=""> #}
					{{ form_row(formDateAccess.dateFin) }}
				</div>
			</div>

			<div class="row mt-4">
				<div class="col-md-5">
					<h4>Roles</h4>
					<select class="form-select" aria-label="test">
						<option>Selectionner</option>
						<option selected value="['ROLE_ADMIN',['ROLE_ADMIN','ROLE_EVALUATOR']]">@Tous (Evaluateur + Etudiant)</option>
						<option value="['ROLE_ADMIN']">@Evaluateur</option>
						<option value="['ROLE_EVALUATOR']">@Etudiant</option>
					</select>
				</div>
				<div class="col-md-1"></div>
				<div class="col-md-5">
					<h4>Motif</h4>
					<select name="date_access_sout[motif]" class="form-select" id="">
						<option value="soutenance" {{ formDateAccess.vars.value.motif == "soutenance" ? 'selected' }}>Soutenance</option>
						<option value="avant soutenance" {{ formDateAccess.vars.value.motif == "avant soutenance" ? 'selected' }}>Avant la soutenance</option>
						<option value="saisie des disponibilites" {{ formDateAccess.vars.value.motif == "saisie des disponibilites" ? 'selected' }}>Saisie des disponibilités</option>
						<option value="consultation" {{ formDateAccess.vars.value.motif == "consultation" ? 'selected' }}>Consultation des notes</option>
					</select>
					{% do formDateAccess.motif.setRendered %}
				</div>
			</div>

			<button class="btn btn-success mt-4" type="submit">
				<i class="fas fa-check"></i>
				Mettre à jour</button>


			{{ form_end(formDateAccess) }}
		</div>
	</div>


</div>{% endblock %}
