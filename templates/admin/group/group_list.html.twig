{% endblock %}

{% block admin_content %}
<h3 class="text-center my-4">Liste des projets</h3>
          
<div class="input-group search">
    <input id="input_search" type="search" class="form-control" placeholder="Titre de projet, nom d'encadrant" aria-label="groupSearch" aria-describedby="basic-addon2" onKeyUp="findItem()">
    <button type="button" class="btn btn-primary" onclick="findItem();">
        <i class="fas fa-search"></i>
    </button>
</div> 


