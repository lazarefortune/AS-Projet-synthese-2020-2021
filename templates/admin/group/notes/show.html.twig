                                    <th scope="col" class="align-middle text-center" style="width:18%">Moyenne </br> <span class="font-weight-normal">/5 points </span></td>
                                 </tr>
                              </thead>
                              <tbody>
                                 {% for id in [1,2,3,4] %}
                                 <tr>
                                    <th class="text-center align-middle">Nom et prénom</th>
                                    <td class="text-center align-middle"> 14 </td>
                                    <td class="text-center align-middle"> 14 </td>
                                    <td class="text-center align-middle"> 14 </td>
                                    <td class="text-center align-middle"> 14 </td>
                                 </tr>
                                    
                                 {% endfor %}
                                 
                              </tbody>
                           </table>
                           <div class="mx-4 text-right">
                                <button class="btn btn-outline-primary"><i class="far fa-file-pdf"></i>  Télécharger</button>
                                <a href="{{ path('group_notes_edit', {groupId: groupId, typeEval: "poster"}) }}"><button class="btn btn-outline-dark ml-5">Modifier</button></a>
                           </div>
                        </div>
                     
                  </section>
    
{% endblock %}