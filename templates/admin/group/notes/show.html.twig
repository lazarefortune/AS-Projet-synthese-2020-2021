{% extends "layouts/admin.html.twig" %}

{% block admin_content %}

<section id="soutenance" class="mx-5">               
                     <p><i style="border-bottom: solid 1px #346cb0;" class="pb-1">Group n° {{ groupId }} / Nom_du_projet</i>
                     <a class="btn btn-primary btn-sm" style="float: right;" href="{{ path('group_list') }}" role="button">Liste des groupes</a></p>
                     <h3 class="text-center my-4">Evaluation de la soutenance <span class="font-weight-normal lead">(coeff. 1)</span></h3> </br>
               
                     
                        <div class="table-responsive"> <!-- d-flex-->
                           <table class="table table-hover mb-4">
                              <thead>
                                 <tr>
                                    <th scope="col" class="align-middle text-center">Nom de l'évaluateur</td>
                                    <th scope="col" class="align-middle text-center" style="width:18%">Qualité de la présentation </br> <span class="font-weight-normal"> coeff. 1 </br>/5 points </span></td>
                                    <th scope="col" class="align-middle text-center" style="width:18%">Travail réalisé. Etat d'avancement du projet </br> <span class="font-weight-normal"> coeff. 1 </br> /5 points </span></td>
                                    <th scope="col" class="align-middle text-center" style="width:18%">Utilisation de compétences nouvelles </br> <span class="font-weight-normal">coeff. 1 </br> /5 points </span></td>
                                    <th scope="col" class="align-middle text-center" style="width:18%">Moyenne </br> <span class="font-weight-normal">/5 points </span></td>
                                 </tr>
                              </thead>
                              <tbody>
                                 {% for id in [1,2,3,4] %}
                                 <tr>
                                    <th class="text-center align-middle">Nom et prénom</th>
                                    <td class="text-center align-middle"> 12 </td>
                                    <td class="text-center align-middle"> 12 </td>
                                    <td class="text-center align-middle"> 12 </td>
                                    <td class="text-center align-middle"> 12 </td>
                                 </tr>
                                    
                                 {% endfor %}
                                
                              </tbody>
                           </table>
                           <div class="mx-4 text-right">
                                <button class="btn btn-outline-primary"><i class="far fa-file-pdf"></i>  Télécharger</button>
                                <a href="{{ path('group_notes_edit', {groupId: groupId, typeEval: "soutenance"}) }}"><button class="btn btn-outline-dark ml-5">Modifier</button></a>
                           </div>
                        </div>
                     
                  </section>
                  <section id="poster" class="mx-5 mb-5">
                     <h3 class="text-center my-4">Evaluation du poster <span class="font-weight-normal lead">(coeff. 1)</span></h3> </br>
               
                     
                        <div class="table-responsive">
                           <table class="table table-hover mb-4">
                              <thead>
                                 <tr>
                                    <th scope="col" class="align-middle text-center">Nom de l'évaluateur</td>
